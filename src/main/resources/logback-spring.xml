<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Boot defaults (kolory, konwersje itp.) -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!-- Konsola Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Czytamy LOG_DIR z właściwości; domyślnie ./logs -->
    <springProperty scope="context" name="LOG_DIR" source="logging.file.path" defaultValue="logs"/>
    <property name="APP_NAME" value="${springAppName:-vehicle-collector-service}"/>

    <!-- Appender plikowy z rotacją po dacie i rozmiarze -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>
        <encoder>
            <!-- PROSTA, czytelna, bez kolorów -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- DEV: konsola + plik -->
    <springProfile name="dev,local,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ROLLING"/>
        </root>
    </springProfile>

    <!-- PROD: tylko plik  -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ROLLING"/>
        </root>
    </springProfile>

    <!-- Przyklady poziomów -->
    <logger name="org.springframework.web.reactive.function.client" level="WARN"/>
    <logger name="com.emat.vehicle_collector_service" level="DEBUG"/>
</configuration>
